<% include ../partials/header %>

        <div class="row">
            <h1 style="text-align: center">Edytuj <%= course.name %></h1>
            <div class="form">
                <form action="/c/<%= course._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="course[name]" value="<%= course.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="course[image]" value="<%= course.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="course[description]" value="<%= course.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-default">Edytuj</button>
                    </div>
                </form>
            </div>
        </div>

<% include ../partials/footer %>