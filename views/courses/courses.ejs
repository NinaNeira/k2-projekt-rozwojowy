<% include ../partials/header %>

            <div id="main-header">
                            <ul class="slideshow">
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                            </ul>
                            <div class="ui text container">
                                <h1 class="ui inverted header landing-header">
                                    Projekt rozwojowy
                                </h1>
                                <h2 class="landing-header">
                                    Baza wiedzy CE
                                </h2>
                                <a class="ui huge primary button landing-header" href="/new">
                                    Dodaj co≈õ od siebie! <i class="plus square icon"></i>
                                </a>
                            </div>
                        </div>
            </div>
            <div class="ui vertical stripe segment">
                        <div class="ui middle aligned stackable grid container">
                                <% courses.forEach(function(course){ %>
                                <div class="four wide column">
                                    <div id="hp-card" class="ui card">
                                        <div class="image">
                                            <a class="ui red ribbon label"><%= course.category %></a>
                                            <img src="<%= course.image %>">
                                        </div>
                                        <div class="content">
                                            <h4><a class="header" href="/c/<%= course._id %>"><%= course.name %></a></h4>
                                        </div>
                                        <div class="extra">
                                            <% if (course.category == "Konferencja" || course.category == "Meetup") { %>
                                                <span class="right floated"><%= moment(course.date).calendar(); %></span>
                                            <% } %>    
                                            <% if (course.rating === 0) { %>
                                            <span>Brak ocen.</span>
                                            <% } else { %>
                                            <span>
                                                Ocena: 
                                                <% if (course.rating < 1.5) { %><i class="star icon checked"></i><%- '<i class="star icon"></i>'.repeat(4) %> <% } %>
                                                <% if (course.rating > 1.5 && course.rating < 2.5) { %> <%- '<i class="star icon checked"></i>'.repeat(2) %><%- '<i class="star icon"></i>'.repeat(3) %> <% } %>
                                                <% if (course.rating > 2.5 && course.rating < 3.5) { %> <%- '<i class="star icon checked"></i>'.repeat(3) %><%- '<i class="star icon"></i>'.repeat(2) %> <% } %>
                                                <% if (course.rating > 3.5 && course.rating < 4.5) { %> <%- '<i class="star icon checked"></i>'.repeat(4) %><%- '<i class="star icon"></i>'.repeat(1) %> <% } %>
                                                <% if (course.rating > 4.5) { %> <%- '<i class="star icon checked"></i>'.repeat(5) %> <% } %>
                                            </span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div> 
                                <% }); %>
                        </div>
                    </div>
        </div>
    </div>

<% include ../partials/footer %>