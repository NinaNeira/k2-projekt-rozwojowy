                                        <a class="header" href="/c/<%= course._id %>"><%= course.name.substring(0, 30) %><% if(course.name.length>30) { %>...<% } %></a>
                                    </h4>
                                    <div class="description">
                                        <a class="ui orange basic tiny button" href="/c/<%= course._id %>">Dowiedz się więcej <i class="chevron right icon"></i></a>
                                    </div>
                                </div>
                                <div class="extra">
                                    <% if (course.category == "Konferencja") { %>
                                    <span class="right floated"><i class="calendar alternate icon"></i> <%= moment(course.date).calendar(); %></span>
                                    <% } %>
