                                    <span class="right floated"><i class="calendar alternate icon"></i> <%= moment(course.date).calendar(); %></span>
                                    <% } %>
                                    <% if (course.rating === 0) { %>
                                    <span>
                                        <span id="rating"><i class="star icon"></i>0</span> 
                                    </span>
                                    <% } else { %>
                                    <span>
                                        <span id="rating"><i class="star icon checked"></i><%= course.rating.toFixed(2) %></span>
                                    <% } %>
                                        <i class="comments icon"></i><%= course.comments.length %>
                                    </span>    
                                </div>
                            </div>
                        </div> 
